@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <!DOCTYPE html>
    <html>
    <head>
        <!--Import Google Icon Font-->
        <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
        <!--Import Google Fonts-->
        <link href="https://fonts.googleapis.com/css?family=Libre+Baskerville|Roboto&display=swap" rel="stylesheet">
        <!--Import materialize.css-->
        <link type="text/css" rel="stylesheet" href="~/Content/materialize.min.css" media="screen,projection" />
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
              integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="~/Content/Hostbul.css">
        <!--Let browser know website is optimized for mobile-->
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    </head>
    <body>
        <nav class="nav-item d-flex container navmenu">
            <h1 class="pt-1 mb-0 mt-2" style="font-family: 'Libre Baskerville', serif;"><a href="#" class="a">HOSTBUL</a></h1>
            <div class="nav-item text-right w-100" style="background: linear-gradient(rgba(0,0,0,0.0),rgba(0,0,0,0.0));">
                <a class="btn btn-light" style="font-family: 'Roboto', sans-serif;text-transform: lowercase;" href="">Giriş Yap</a>
                <a class="btn btn-dark" style="font-family: 'Roboto', sans-serif;text-transform: lowercase;" href="">Kayıt Ol</a>
            </div>
        </nav>
        <div class="container" style="height: 100%;margin-top: 15vh;margin-bottom: 46vh;">
            <div class="jumbotron deneme pb-0 mb-1 text-light text-center" style="background: linear-gradient(rgba(0,0,0,0.0),rgba(0,0,0,0.0));width: 100%">
                <h1 style="font-family: 'Libre Baskerville', serif;">Hoş Geldiniz!</h1>
                <p style="font-family: 'Roboto', sans-serif;">Burada istediğiniz şehir ve ilçede konaklayabileceğiniz daireler bulabilirsiniz.</p>
            </div>
            <!--<h1 class="text-center deneme w-100 text-light pb-4" style="font-size: 72px;">HOSTBUL</h1>-->
            <div class="z-depth-4 bg-light deneme mt-1 mb-4 mx-auto">
                <div class="input-field mx-2 my-1">
                    <i class="material-icons grey-text lighten-2 prefix" style="font-size: 27px;margin-top: 1px;">search</i>
                    <input id="icon_prefix" name="myInput" type="text" autofocus class="validate input px-2 mx-4 mb-0"
                           style="border-bottom: 0px solid #000;box-shadow: 0 0px 0 0 #000;">
                </div>
            </div>
            <!--JavaScript at end of body for optimized loading-->
            <script type="text/javascript" src="materialize/js/materialize.min.js"></script>
            <!--<script type="text/javascript" src="Bootstrap/js/bootstrap.min.js"></script>
            <script type="text/javascript" src="Bootstrap/jQuery/jquery-3.4.1.min.js"></script>-->

            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
    </body>
    <script type="text/javascript">
        var input = document.getElementByName("myInput");
        input.addEventListener("onkeyUp", function (event) {
            if (event.keyCode === 13) {
                //event.preventDefault();
                window.location.href = "#";
            }
        });
    </script>
</html>
}
